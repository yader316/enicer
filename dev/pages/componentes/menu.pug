mixin menu
  .menu.d-flex-direction
    .menu__bar
      a(href="#").menu__bt #[span.menu__icons.icon-list2] enicer
    nav.menu__navigation
      ul.menu__menu-container
        li.menu__items: a(href="#").menu__link #[span.menu__icons.icon-home] inicio
        li.menu__items: a(href="#").menu__link #[span.menu__icons.icon-briefcase] trabajos
        li.menu__items.subMenu 
          a(href="#").menu__link #[span.menu__icons.icon-rocket] proyectos #[span.menu__icons.menu__caret.icon-arrow-down6]
          ul.menu__children
            li.menu__items.menu__itemsChildren: a(href="#").menu__link.menu__linkChildren #[span.menu__icons.menu__iconsChildren.icon-dot] SubElemento #1
            li.menu__items.menu__itemsChildren: a(href="#").menu__link.menu__linkChildren #[span.menu__icons.menu__iconsChildren.icon-dot] SubElemento #2
            li.menu__items.menu__itemsChildren: a(href="#").menu__link.menu__linkChildren #[span.menu__icons.menu__iconsChildren.icon-dot] SubElemento #3
        li.menu__items: a(href="#").menu__link #[span.menu__icons.icon-earth] servicios
        li.menu__items: a(href="#").menu__link #[span.menu__icons.icon-mail] contactenos    